<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddRecipeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/add_recipe_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_recipe_title"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <HorizontalScrollView
            android:id="@+id/image_pick_horizontal_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_recipe_title_text_view">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <include
                    android:id="@+id/load_image_image_view_1"
                    layout="@layout/load_image_to_recipe_image_view" />

                <include
                    android:id="@+id/load_image_image_view_2"
                    layout="@layout/load_image_to_recipe_image_view" />

                <include
                    android:id="@+id/load_image_image_view_3"
                    layout="@layout/load_image_to_recipe_image_view" />

                <include
                    android:id="@+id/load_image_image_view_4"
                    layout="@layout/load_image_to_recipe_image_view" />

            </LinearLayout>
        </HorizontalScrollView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/recipeTitle"
            style="@style/LoginTextInputOuterFieldStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:boxStrokeColor="@color/primary_40"
            app:hintTextColor="@color/secondary_40"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_pick_horizontal_scroll_view">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/recipe_title_edit_text"
                style="@style/LoginTextInputInnerFieldStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_view_background"
                android:hint="@string/recipe_title"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:id="@+id/serves_picker"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/neutral_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recipeTitle" />

        <ImageView
            android:id="@+id/serves_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/serves"
            android:src="@drawable/serves_icon"
            app:layout_constraintBottom_toBottomOf="@id/serves_picker"
            app:layout_constraintStart_toStartOf="@id/serves_picker"
            app:layout_constraintTop_toTopOf="@id/serves_picker" />

        <TextView
            android:id="@+id/serves_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@string/serves"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/serves_icon"
            app:layout_constraintStart_toEndOf="@id/serves_icon"
            app:layout_constraintTop_toTopOf="@id/serves_icon" />

        <TextView
            android:id="@+id/serves_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/serves_count"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/serves_text"
            app:layout_constraintEnd_toStartOf="@id/arrow_right"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/serves_text"
            app:layout_constraintTop_toTopOf="@id/serves_text"
            tools:text="01" />

        <ImageView
            android:id="@+id/arrow_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/arrow_right"
            android:scaleType="centerCrop"
            android:src="@drawable/arrow_right_red"
            app:layout_constraintBottom_toBottomOf="@id/serves_count_text_view"
            app:layout_constraintEnd_toEndOf="@id/serves_picker"
            app:layout_constraintTop_toTopOf="@id/serves_count_text_view" />

        <View
            android:id="@+id/cook_time_picker"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/neutral_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/serves_picker" />

        <ImageView
            android:id="@+id/cook_time_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/cook_time"
            android:src="@drawable/cool_time_icon"
            app:layout_constraintBottom_toBottomOf="@id/cook_time_picker"
            app:layout_constraintStart_toStartOf="@id/cook_time_picker"
            app:layout_constraintTop_toTopOf="@id/cook_time_picker" />

        <TextView
            android:id="@+id/cook_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@string/cook_time"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/cook_time_icon"
            app:layout_constraintStart_toEndOf="@id/cook_time_icon"
            app:layout_constraintTop_toTopOf="@id/cook_time_icon" />

        <TextView
            android:id="@+id/cook_time_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/serves_count"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/cook_time_text"
            app:layout_constraintEnd_toStartOf="@id/arrow_right2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/cook_time_text"
            app:layout_constraintTop_toTopOf="@id/cook_time_text"
            tools:text="01" />

        <ImageView
            android:id="@+id/arrow_right2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/arrow_right"
            android:scaleType="centerCrop"
            android:src="@drawable/arrow_right_red"
            app:layout_constraintBottom_toBottomOf="@id/cook_time_count_text_view"
            app:layout_constraintEnd_toEndOf="@id/cook_time_picker"
            app:layout_constraintTop_toTopOf="@id/cook_time_count_text_view" />

        <View
            android:id="@+id/recipe_category_picker"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/neutral_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cook_time_picker" />

        <ImageView
            android:id="@+id/recipe_category_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/cook_time"
            android:src="@drawable/recipe_category_icon"
            app:layout_constraintBottom_toBottomOf="@id/recipe_category_picker"
            app:layout_constraintStart_toStartOf="@id/recipe_category_picker"
            app:layout_constraintTop_toTopOf="@id/recipe_category_picker" />

        <TextView
            android:id="@+id/recipe_category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@string/recipe_category"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/recipe_category_icon"
            app:layout_constraintStart_toEndOf="@id/recipe_category_icon"
            app:layout_constraintTop_toTopOf="@id/recipe_category_icon" />

        <TextView
            android:id="@+id/recipe_category_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/single_string_pick"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/recipe_category_text"
            app:layout_constraintEnd_toStartOf="@id/arrow_right3"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/recipe_category_text"
            app:layout_constraintTop_toTopOf="@id/recipe_category_text"
            tools:text="Meat" />

        <ImageView
            android:id="@+id/arrow_right3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/arrow_right"
            android:scaleType="centerCrop"
            android:src="@drawable/arrow_right_red"
            app:layout_constraintBottom_toBottomOf="@id/recipe_category_text_view"
            app:layout_constraintEnd_toEndOf="@id/recipe_category_picker"
            app:layout_constraintTop_toTopOf="@id/recipe_category_text_view" />

        <TextView
            android:id="@+id/ingredientsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/ingredients"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recipe_category_picker" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ingredients_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ingredientsText" />

        <TextView
            android:id="@+id/add_new_ingredient_to_recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/add_new_ingredient"
            android:textSize="20sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/baseline_add_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/ingredients_recycler_view"
            app:layout_constraintTop_toBottomOf="@id/ingredients_recycler_view" />

        <EditText
            android:id="@+id/recipe_process_edit_text"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="@string/recipe_process"
            app:layout_constraintTop_toBottomOf="@id/add_new_ingredient_to_recycler"
            android:layout_marginTop="16dp"
            android:background="@drawable/search_view_background"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/save_my_recipe_button"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_welcome_activity"
            android:text="@string/save_my_recipe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recipe_process_edit_text" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>